<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="
           http://xmlns.jcp.org/xml/ns/javaee
           http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Bank Account Transaction System</display-name>

    <servlet>
        <servlet-name>OpenAccountServlet</servlet-name>
        <servlet-class>com.bank.servlet.OpenAccountServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DepositServlet</servlet-name>
        <servlet-class>com.bank.servlet.DepositServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>WithdrawServlet</servlet-name>
        <servlet-class>com.bank.servlet.WithdrawServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TransactionHistoryServlet</servlet-name>
        <servlet-class>com.bank.servlet.TransactionHistoryServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>OpenAccountServlet</servlet-name>
        <url-pattern>/account/open</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DepositServlet</servlet-name>
        <url-pattern>/account/deposit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>WithdrawServlet</servlet-name>
        <url-pattern>/account/withdraw</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TransactionHistoryServlet</servlet-name>
        <url-pattern>/account/transactions</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>RequestLoggingFilter</filter-name>
        <filter-class>com.bank.filter.RequestLoggingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>RequestLoggingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
